<% include partials/_header %>

<div class='card'>
  <div class="content">
    <form action='/edit/<%= task._id %>' method="POST">
      <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input name='title' class="input" type="text" placeholder="Title" value='<%= task.title %>' required>
        </div>
      </div>
      <div class="field">
        <label class="label">Message</label>
        <div class="control">
          <textarea name='description' class="textarea" placeholder="Descrition"><%= task.description %></textarea>
        </div>
      </div>
      <div class="field is-grouped">
        <div class="control">
          <button type='submit' class="button is-link">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>
<% include partials/_footer%>
