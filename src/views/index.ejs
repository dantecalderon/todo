<div class='container'>
  <div class='columns'>
    <div class='column is-3 is-3-widescreen'>
      <div class='card'>
        <div class="content">
          <form action='/add' method="POST">
            <div class="field">
              <label class="label">Name</label>
              <div class="control">
                <input name='title' class="input" type="text" placeholder="Title" required>
              </div>
            </div>
            <div class="field">
              <label class="label">Message</label>
              <div class="control">
                <textarea name='description' class="textarea" placeholder="Descrition"></textarea>
              </div>
            </div>
            <div class="field is-grouped">
              <div class="control">
                <button type='submit' class="button is-link">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="column">
      <div class='content'>
        <% for (let i = 0; i < tasks.length; i++) { %>
          <li><b><%= tasks[i].title %></b> - <span><%= tasks[i].description %></span></li>
        <% } %>
      </div>
    </div>
  </div>
</div>
